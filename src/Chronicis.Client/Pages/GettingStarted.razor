                        }
                        else
                        {
                            <span>Start Your Chronicle</span>
                        }
                    </MudButton>
                </div>
            </div>
        }

        <!-- Progress Dots -->
        <div class="progress-dots">
            @for (int i = 0; i < 4; i++)
            {
                var step = i;
                <div class="dot @(step == _currentStep ? "active" : "") @(step < _currentStep ? "completed" : "")"
                     @onclick="() => GoToStep(step)"></div>
            }
        </div>
    </div>
</div>

