@page "/settings"
@attribute [Authorize]
@using Chronicis.Client.Components.Settings

<PageTitle>Settings - Chronicis</PageTitle>

<MudPaper Elevation="2" Class="settings-container pa-6">
    <div class="settings-header mb-6">
        <MudText Typo="Typo.h4" Class="settings-title">Settings</MudText>
        <MudText Typo="Typo.body2" Class="mud-text-secondary">
            Manage your account, export data, and customize your experience.
        </MudText>
    </div>

    <MudTabs Elevation="0" 
             Rounded="true" 
             ApplyEffectsToContainer="true" 
             PanelClass="pt-6"
             Color="Color.Secondary"
             SliderColor="Color.Secondary"
             Class="settings-tabs">
        <MudTabPanel Text="Profile" Icon="@Icons.Material.Filled.Person">
            <ProfileSection />
        </MudTabPanel>
        
        <MudTabPanel Text="Data" Icon="@Icons.Material.Filled.Storage">
            <DataManagementSection />
        </MudTabPanel>
        
        <MudTabPanel Text="Preferences" Icon="@Icons.Material.Filled.Tune">
            <PreferencesSection />
        </MudTabPanel>
    </MudTabs>
</MudPaper>

<style>
    .settings-container {
        max-width: 900px;
        background-color: white !important;
    }

    .settings-header {
        border-bottom: 1px solid var(--mud-palette-lines-default);
        padding-bottom: 1.5rem;
    }

    .settings-title {
        color: var(--mud-palette-primary);
    }

    .settings-tabs .mud-tab {
        text-transform: none;
        font-weight: 500;
    }

    .settings-tabs .mud-tabs-toolbar {
        background-color: transparent;
    }
</style>
