@page "/settings"
@attribute [Authorize]
@using Chronicis.Client.Components.Settings

<PageTitle>Settings - Chronicis</PageTitle>

<MudPaper Elevation="2" Class="settings-container pa-6">
    <div class="settings-header mb-6">
        <MudText Typo="Typo.h4" Class="settings-title">Settings</MudText>
        <MudText Typo="Typo.body2" Class="mud-text-secondary">
            Manage your account, export data, and customize your experience.
        </MudText>
    </div>

    <MudTabs Elevation="0" 
             Rounded="true" 
             ApplyEffectsToContainer="true" 
             PanelClass="pt-6"
             Class="settings-tabs">
        <MudTabPanel Text="Profile" Icon="@Icons.Material.Filled.Person">
            <ProfileSection />
        </MudTabPanel>
        
        <MudTabPanel Text="Data" Icon="@Icons.Material.Filled.Storage">
            <DataManagementSection />
        </MudTabPanel>
        
        <MudTabPanel Text="Preferences" Icon="@Icons.Material.Filled.Tune">
            <PreferencesSection />
        </MudTabPanel>
    </MudTabs>
</MudPaper>

<style>
    .settings-container {
        max-width: 900px;
        background-color: white !important;
    }

    .settings-header {
        border-bottom: 1px solid var(--mud-palette-lines-default);
        padding-bottom: 1.5rem;
    }

    .settings-title {
        color: var(--chronicis-deep-blue-grey);
        font-family: var(--chronicis-font-heading);
    }

    .settings-tabs .mud-tab {
        text-transform: none;
        font-weight: 500;
        color: var(--chronicis-slate-grey);
    }

    .settings-tabs .mud-tab:hover {
        color: var(--chronicis-beige-gold);
        background-color: rgba(196, 175, 142, 0.08);
    }

    .settings-tabs .mud-tab.mud-tab-active {
        color: var(--chronicis-beige-gold) !important;
    }

    .settings-tabs .mud-tabs-toolbar {
        background-color: transparent;
    }

    .settings-tabs .mud-tab-slider {
        background-color: var(--chronicis-beige-gold) !important;
    }

    .settings-section-title {
        color: var(--chronicis-deep-blue-grey);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .settings-section-description {
        color: var(--mud-palette-text-secondary);
        margin-bottom: 1rem;
    }

    .settings-divider {
        margin: 1.5rem 0;
    }
</style>
