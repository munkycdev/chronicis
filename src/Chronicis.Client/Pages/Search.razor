@page "/search"
@attribute [Authorize]
@implements IDisposable
@inject SearchViewModel ViewModel

<MudPaper Elevation="2" Class="chronicis-article-card chronicis-fade-in">
    @if (ViewModel.IsLoading)
    {
        <div class="d-flex flex-column align-center mt-8">
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large" />
            <MudText Typo="Typo.h6" Class="mt-4">Searching...</MudText>
        </div>
    }
    else if (ViewModel.Results == null)
    {
        <div class="text-center mt-8">
            <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Large" Color="Color.Secondary" Class="mb-4" />
            <MudText Typo="Typo.h5" Color="Color.Secondary">Enter a search term to begin</MudText>
        </div>
    }
    else if (ViewModel.Results.TotalResults == 0)
    {
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mt-4">
            <MudText Typo="Typo.h6">No results found for "<strong>@ViewModel.Results.Query</strong>"</MudText>
            <MudText Typo="Typo.body2" Class="mt-2">Try different keywords or check your spelling</MudText>
        </MudAlert>
    }
    else
    {
        <div class="mb-4">
            <MudText Typo="Typo.h4">
                Search Results
            </MudText>
            <MudText Typo="Typo.body1" Class="mt-2" Color="Color.Secondary">
                Found <strong>@ViewModel.Results.TotalResults</strong> result@(ViewModel.Results.TotalResults == 1 ? "" : "s") for "<strong>@ViewModel.Results.Query</strong>"
            </MudText>
        </div>

        @* Title Matches *@
        @if (ViewModel.Results.TitleMatches.Any())
        {
            <div class="search-group mt-6">
                <MudText Typo="Typo.h6" Class="search-group-header mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Title" Class="mr-2" />
                    Title Matches (@ViewModel.Results.TitleMatches.Count)
                </MudText>

                @foreach (var result in ViewModel.Results.TitleMatches)
                {
                    <SearchResultCard Result="@result" Query="@ViewModel.Results.Query" OnClick="@(() => ViewModel.NavigateToArticle(result))" />
                }
            </div>
        }

        @* Content Matches *@
        @if (ViewModel.Results.BodyMatches.Any())
        {
            <div class="search-group mt-6">
                <MudText Typo="Typo.h6" Class="search-group-header mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Description" Class="mr-2" />
                    Content Matches (@ViewModel.Results.BodyMatches.Count)
                </MudText>

                @foreach (var result in ViewModel.Results.BodyMatches)
                {
                    <SearchResultCard Result="@result" Query="@ViewModel.Results.Query" OnClick="@(() => ViewModel.NavigateToArticle(result))" />
                }
            </div>
        }

        @* Hashtag Matches *@
        @if (ViewModel.Results.HashtagMatches.Any())
        {
            <div class="search-group mt-6">
                <MudText Typo="Typo.h6" Class="search-group-header mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Tag" Class="mr-2" />
                    Hashtag Matches (@ViewModel.Results.HashtagMatches.Count)
                </MudText>

                @foreach (var result in ViewModel.Results.HashtagMatches)
                {
                    <SearchResultCard Result="@result" Query="@ViewModel.Results.Query" OnClick="@(() => ViewModel.NavigateToArticle(result))" />
                }
            </div>
        }
    }
</MudPaper>

@code {
    [SupplyParameterFromQuery(Name = "q")]
    public string? SearchQuery { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        ViewModel.PropertyChanged += OnViewModelChanged;
        await ViewModel.SearchAsync(SearchQuery);
    }

    private void OnViewModelChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
        => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        ViewModel.PropertyChanged -= OnViewModelChanged;
    }
}
