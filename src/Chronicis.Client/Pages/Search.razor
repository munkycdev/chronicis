@page "/search"
@attribute [Authorize]
@inject ISearchApiService SearchApi
@inject NavigationManager Navigation
@inject ITreeStateService TreeState

<MudPaper Elevation="2" Class="chronicis-article-card chronicis-fade-in">
    @if (_isLoading)
    {
        <div class="d-flex flex-column align-center mt-8">
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large" />
            <MudText Typo="Typo.h6" Class="mt-4">Searching...</MudText>
        </div>
    }
    else if (_results == null)
    {
        <div class="text-center mt-8">
            <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Large" Color="Color.Secondary" Class="mb-4" />
            <MudText Typo="Typo.h5" Color="Color.Secondary">Enter a search term to begin</MudText>
        </div>
    }
    else if (_results.TotalResults == 0)
    {
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mt-4">
            <MudText Typo="Typo.h6">No results found for "<strong>@_results.Query</strong>"</MudText>
            <MudText Typo="Typo.body2" Class="mt-2">Try different keywords or check your spelling</MudText>
        </MudAlert>
    }
    else
    {
        <div class="mb-4">
            <MudText Typo="Typo.h4">
                Search Results
            </MudText>
            <MudText Typo="Typo.body1" Class="mt-2" Color="Color.Secondary">
                Found <strong>@_results.TotalResults</strong> result@(_results.TotalResults == 1 ? "" : "s") for "<strong>@_results.Query</strong>"
            </MudText>
        </div>

        @* Title Matches *@
        @if (_results.TitleMatches.Any())
        {
            <div class="search-group mt-6">
                <MudText Typo="Typo.h6" Class="search-group-header mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Title" Class="mr-2" />
                    Title Matches (@_results.TitleMatches.Count)
                </MudText>
                
                @foreach (var result in _results.TitleMatches)
                {
                    <SearchResultCard Result="@result" Query="@_results.Query" OnClick="@(() => NavigateToArticle(result))" />
                }
            </div>
        }

        @* Content Matches *@
        @if (_results.BodyMatches.Any())
        {
            <div class="search-group mt-6">
                <MudText Typo="Typo.h6" Class="search-group-header mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Description" Class="mr-2" />
                    Content Matches (@_results.BodyMatches.Count)
                </MudText>
                
                @foreach (var result in _results.BodyMatches)
                {
                    <SearchResultCard Result="@result" Query="@_results.Query" OnClick="@(() => NavigateToArticle(result))" />
                }
            </div>
        }

        @* Hashtag Matches *@
        @if (_results.HashtagMatches.Any())
        {
            <div class="search-group mt-6">
                <MudText Typo="Typo.h6" Class="search-group-header mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Tag" Class="mr-2" />
                    Hashtag Matches (@_results.HashtagMatches.Count)
                </MudText>
                
                @foreach (var result in _results.HashtagMatches)
                {
                    <SearchResultCard Result="@result" Query="@_results.Query" OnClick="@(() => NavigateToArticle(result))" />
                }
            </div>
        }
    }
</MudPaper>

@code {
    [SupplyParameterFromQuery(Name = "q")]
    public string? SearchQuery { get; set; }
    
    private GlobalSearchResultsDto? _results;
    private bool _isLoading;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrWhiteSpace(SearchQuery))
        {
            await PerformSearch();
        }
        else
        {
            _results = null;
        }
    }

    private async Task PerformSearch()
    {
        _isLoading = true;
        StateHasChanged();
        
        try
        {
            _results = await SearchApi.SearchContentAsync(SearchQuery!);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Search error: {ex.Message}");
            _results = null;
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void NavigateToArticle(ArticleSearchResultDto result)
    {
        TreeState.NotifySelectionChanged(result.Id);
        Navigation.NavigateTo($"/article/{result.Slug}");
    }
}
