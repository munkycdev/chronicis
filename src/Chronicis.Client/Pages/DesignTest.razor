@page "/design-test"

<PageTitle>Design System Test - Chronicis</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-4">
    <MudText Typo="Typo.h3" Class="mb-4" Style="font-family: var(--chronicis-font-heading);">
        Chronicis Design System
    </MudText>
    
    <div class="chronicis-rune-divider mb-4"></div>
    
    <!-- Color Palette -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Color Palette</MudText>
        <MudGrid>
            <MudItem xs="6" md="3">
                <div style="background: #1F2A33; padding: 24px; border-radius: 8px; text-align: center;">
                    <MudText Style="color: white; font-weight: 500;">Deep Blue-Grey</MudText>
                    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.7);">#1F2A33</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" md="3">
                <div style="background: #C4AF8E; padding: 24px; border-radius: 8px; text-align: center;">
                    <MudText Style="color: #1F2A33; font-weight: 500;">Beige-Gold</MudText>
                    <MudText Typo="Typo.caption" Style="color: #1F2A33;">#C4AF8E</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" md="3">
                <div style="background: #3A4750; padding: 24px; border-radius: 8px; text-align: center;">
                    <MudText Style="color: white; font-weight: 500;">Slate Grey</MudText>
                    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.7);">#3A4750</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" md="3">
                <div style="background: #F4F0EA; padding: 24px; border-radius: 8px; text-align: center; border: 1px solid #ccc;">
                    <MudText Style="color: #1A1A1A; font-weight: 500;">Off-White</MudText>
                    <MudText Typo="Typo.caption" Style="color: #1A1A1A;">#F4F0EA</MudText>
                </div>
            </MudItem>
        </MudGrid>
    </MudPaper>
    
    <!-- Typography -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Typography</MudText>
        <MudText Typo="Typo.h1" Class="mb-2">Heading 1 - Spellweaver Display</MudText>
        <MudText Typo="Typo.h2" Class="mb-2">Heading 2 - Spellweaver Display</MudText>
        <MudText Typo="Typo.h3" Class="mb-2">Heading 3 - Spellweaver Display</MudText>
        <MudText Typo="Typo.h4" Class="mb-2">Heading 4 - Spellweaver Display</MudText>
        <MudText Typo="Typo.body1" Class="mb-2">
            Body text uses Roboto for excellent readability. Lorem ipsum dolor sit amet, 
            consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et 
            dolore magna aliqua.
        </MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            Secondary text for metadata and supporting information.
        </MudText>
    </MudPaper>
    
    <!-- Buttons -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Buttons</MudText>
        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <MudButton Variant="Variant.Filled" Color="Color.Primary">
                Primary Filled
            </MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary">
                Primary Outlined
            </MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Primary">
                Primary Text
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Save">
                With Icon
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="true">
                Disabled
            </MudButton>
        </div>
    </MudPaper>
    
    <!-- Save Status Indicators -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Save Status Indicators</MudText>
        <div style="display: flex; flex-direction: column; gap: 12px;">
            <div class="chronicis-save-status saving">
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <span>Saving...</span>
            </div>
            <div class="chronicis-save-status saved">
                <span>‚úì Saved just now</span>
            </div>
            <div class="chronicis-save-status unsaved">
                <span>‚ö†Ô∏è Unsaved changes</span>
            </div>
        </div>
    </MudPaper>
    
    <!-- Loading Skeleton -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Loading Skeleton</MudText>
        <LoadingSkeleton />
    </MudPaper>
    
    <!-- Empty State -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Empty State</MudText>
        <EmptyState 
            Icon="üìù"
            Title="No Articles Yet"
            Message="Get started by creating your first article. Build your campaign knowledge base one entry at a time."
            ActionText="Create First Article"
            OnActionClick="@(() => Snackbar.Add("Create clicked!", Severity.Info))" />
    </MudPaper>
    
    <!-- Notifications -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Notifications</MudText>
        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@(() => Snackbar.Add("Success!", Severity.Success))">
                Success Toast
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@(() => Snackbar.Add("Error!", Severity.Error))">
                Error Toast
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Warning" OnClick="@(() => Snackbar.Add("Warning!", Severity.Warning))">
                Warning Toast
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="@(() => Snackbar.Add("Info!", Severity.Info))">
                Info Toast
            </MudButton>
        </div>
    </MudPaper>
    
    <!-- Hover Effects -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Hover Effects</MudText>
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudPaper Elevation="1" Class="pa-3 chronicis-glow-hover" style="cursor: pointer;">
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Gold Glow Card</MudText>
                    <MudText Typo="Typo.body2">Hover to see the gold glow effect</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudPaper Elevation="1" Class="pa-3 chronicis-glow-hover" style="cursor: pointer;">
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Interactive Card</MudText>
                    <MudText Typo="Typo.body2">Smooth transition on hover</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudPaper Elevation="1" Class="pa-3 chronicis-glow-hover" style="cursor: pointer;">
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Magical Feel</MudText>
                    <MudText Typo="Typo.body2">Subtle fantasy ambience</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudPaper>
    
    <!-- Animations -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Animations</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="TriggerAnimation">
            Trigger Fade In
        </MudButton>
        @if (_showAnimated)
        {
            <div class="chronicis-fade-in mt-3">
                <MudAlert Severity="Severity.Success">
                    This element fades in smoothly! ‚ú®
                </MudAlert>
            </div>
        }
    </MudPaper>
    
    <!-- Dividers -->
    <MudPaper Elevation="2" Class="pa-4 mb-4">
        <MudText Typo="Typo.h5" Class="mb-3">Decorative Elements</MudText>
        <MudText Typo="Typo.body1" Class="mb-3">
            Rune-inspired dividers add subtle fantasy elements
        </MudText>
        <div class="chronicis-rune-divider"></div>
        <MudText Typo="Typo.body1" Class="mt-3">
            These dividers use the beige-gold color with diamond symbols
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    [Inject] private ISnackbar Snackbar { get; set; } = default!;
    
    private bool _showAnimated = false;
    
    private void TriggerAnimation()
    {
        _showAnimated = false;
        StateHasChanged();
        Task.Run(async () =>
        {
            await Task.Delay(100);
            await InvokeAsync(() =>
            {
                _showAnimated = true;
                StateHasChanged();
            });
        });
    }
}
