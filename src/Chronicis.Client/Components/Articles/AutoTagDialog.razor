@inject IAutoHashtagApiService AutoHashtagApi
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-4">Auto-Tag This Article</MudText>

        @if (_isLoading)
        {
            <div class="text-center py-4">
                <MudProgressCircular Color="Color.Primary" Size="Size.Medium" Indeterminate="true" />
                <MudText Typo="Typo.body2" Class="mt-3">Scanning for hashtag opportunities...</MudText>
            </div>
        }
        else if (_preview != null)
        {
            @if (_preview.MatchesFound > 0)
            {
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Found <strong>@_preview.MatchesFound</strong> @(_preview.MatchesFound == 1 ? "reference" : "references") to other articles.
                </MudAlert>

                <MudText Typo="Typo.subtitle2" Class="mb-2">Matched titles:</MudText>
                <div class="mb-4">
                    @foreach (var title in _preview.MatchedTitles)
                    {
                        <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined" Class="ma-1">
                            #@title
                        </MudChip>
                    }
                </div>

                <MudText Typo="Typo.subtitle2" Class="mb-2">Preview (new hashtags highlighted):</MudText>
                <MudPaper Elevation="0" Class="pa-3" Style="background-color: #f5f5f5; max-height: 400px; overflow-y: auto;">
                    <div class="preview-content" style="font-family: monospace; font-size: 0.875rem; line-height: 1.6; white-space: pre-wrap;">
                        @((MarkupString)_preview.PreviewBody.Replace("<mark>", "<mark style='background-color: #FFF9C4; padding: 2px 4px; font-weight: 500;'>"))
                    </div>
                </MudPaper>
            }
            else
            {
                <MudAlert Severity="Severity.Info">
                    No hashtag opportunities found in this article. Either references are already tagged or no matching article titles were detected.
                </MudAlert>
            }
        }
    </DialogContent>
    
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        @if (_preview != null && _preview.MatchesFound > 0)
        {
            <MudButton Color="Color.Primary" 
                       Variant="Variant.Filled"
                       OnClick="Apply"
                       Disabled="_isApplying"
                       StartIcon="@Icons.Material.Filled.Check">
                @if (_isApplying)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    <span>Applying...</span>
                }
                else
                {
                    <span>Apply Hashtags</span>
                }
            </MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public int ArticleId { get; set; }

    private bool _isLoading = true;
    private bool _isApplying = false;
    private AutoHashtagChange? _preview;

    protected override async Task OnInitializedAsync()
    {
        await LoadPreview();
    }

    private async Task LoadPreview()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            // Preview changes for just this article
            var response = await AutoHashtagApi.PreviewAutoHashtagAsync(new List<int> { ArticleId });

            // Get the change for this specific article (should only be one)
            _preview = response.Changes.FirstOrDefault();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading preview: {ex.Message}", Severity.Error);
            _preview = new AutoHashtagChange { MatchesFound = 0 };
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task Apply()
    {
        if (_preview == null || _preview.MatchesFound == 0) return;

        _isApplying = true;
        StateHasChanged();

        try
        {
            await AutoHashtagApi.ApplyAutoHashtagAsync(new List<int> { ArticleId });
            
            Snackbar.Add($"Successfully added {_preview.MatchesFound} hashtags!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error applying hashtags: {ex.Message}", Severity.Error);
            _isApplying = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
