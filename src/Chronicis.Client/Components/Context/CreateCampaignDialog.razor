@inject ICampaignApiService CampaignApi

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_isValid">
            <MudTextField @bind-Value="_name"
                          Label="Campaign Name"
                          Required="true"
                          RequiredError="Campaign name is required"
                          MaxLength="200"
                          Counter="200"
                          Immediate="true"
                          Variant="Variant.Outlined"
                          Class="mb-3" />

            <MudTextField @bind-Value="_description"
                          Label="Description (optional)"
                          MaxLength="1000"
                          Counter="1000"
                          Lines="3"
                          Variant="Variant.Outlined" />
        </MudForm>

        <MudAlert Severity="Severity.Info" Dense="true" Class="mt-3">
            This will create a campaign with Act 1 and a Shared Information section.
        </MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="_isSubmitting">Cancel</MudButton>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   Disabled="@(!_isValid || _isSubmitting)">
            @if (_isSubmitting)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Create Campaign
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Guid WorldId { get; set; }

    private MudForm _form = null!;
    private bool _isValid;
    private bool _isSubmitting;

    private string _name = string.Empty;
    private string? _description;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await _form.Validate();
        if (!_isValid)
            return;

        _isSubmitting = true;

        var dto = new CampaignCreateDto
        {
            WorldId = WorldId,
            Name = _name,
            Description = _description
        };

        var result = await CampaignApi.CreateCampaignAsync(dto);

        _isSubmitting = false;

        if (result != null)
        {
            MudDialog.Close(DialogResult.Ok(result));
        }
        else
        {
            // Show error - handled by snackbar in parent
            MudDialog.Cancel();
        }
    }
}
