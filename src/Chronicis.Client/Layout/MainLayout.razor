@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3"><img src="/images/logo.png" alt="Chronicis Logo" class="logo"/>CHRONICIS</MudText>
        <MudSpacer />
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Variant="@DrawerVariant.Persistent">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Campaign</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Home</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private MudTheme _theme = new MudTheme
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#C4AF8E",        // Beige-Gold
            Secondary = "#3A4750",      // Slate Grey
            AppbarBackground = "#1F2A33", // Deep Blue-Grey
            AppbarText = "#F4F0EA",     // Soft Off-White
            Background = "#F4F0EA",     // Soft Off-White
            Surface = "#FFFFFF",
            DrawerBackground = "#1F2A33", // Deep Blue-Grey
            DrawerText = "#F4F0EA",     // Soft Off-White
        }
    };

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
