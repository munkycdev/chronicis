@implements IDisposable
@inherits LayoutComponentBase
@inject TreeStateService TreeStateService
@inject ArticleApiService ArticleApiService
@using Chronicis.Client.ViewModels

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@ToggleDrawer" />
        <MudImage Src="/images/logo.png" Height="32" Class="mr-2" />
        <MudText Typo="Typo.h6">Chronicis</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               Elevation="1"
               Variant="@DrawerVariant.Persistent"
               Width="320px">
        <MudDrawerHeader>
            <MudTextField @bind-Value="_searchQuery"
                          Placeholder="Search articles..."
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Clearable="true"
                          OnKeyUp="@OnSearchKeyUp"
                          DebounceInterval="300" />
        </MudDrawerHeader>
        <ArticleTreeView TreeItems="@_treeItems"
                         OnArticleSelected="@OnArticleSelected" />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private string _searchQuery = string.Empty;
    private List<ArticleTreeItemViewModel> _treeItems = new();

    protected override void OnInitialized()
    {
        TreeStateService.OnStateChanged += UpdateTree;
        _treeItems = TreeStateService.RootItems;
    }

    private void UpdateTree()
    {
        _treeItems = TreeStateService.RootItems;
        StateHasChanged();
    }

    public void Dispose()
    {
        TreeStateService.OnStateChanged -= UpdateTree;
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            // Implement search in Phase 3
        }
    }

    private void OnArticleSelected(ArticleTreeItemViewModel item)
    {
        TreeStateService.SelectArticle(item);
    }
}